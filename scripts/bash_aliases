alias ls='ls --color'
alias hist='history | grep $1'
alias memcard='mount /dev/mmcblk0p1'
alias isomount='mount -o loop -t iso9660 $1 /media/cdrom'
alias slingplayer='wine ~/.wine/drive_c/Program\ Files/Sling\ Media/SlingPlayer/SlingPlayer.exe'
alias battery='acpitool -b | cut -b20-'
alias ncmpc='ncmpc -c'
alias explicitly-installed='deborphan -a | egrep -v "linux-.*|.*ubuntu-(desktop|minimal|standard)"'
alias shot='scrot -cd 4 /home/shearn89/screenshots/%Y-%m-%d_$wx$h.png'
alias irc='urxvt -g 76x57+800+20 -e irssi &'
alias lock='clear; echo "Screen locked at" `date +%H:%M`; (xtrlock &); ncmpc'
