filetype indent plugin on
syntax on

set hidden
set backspace=indent,eol,start
set autoindent
set nostartofline
set ruler
set laststatus=2
set confirm
" set visualbell
set number
set cul

set backup
set backupdir=~/.vim/backup
set directory=~/.vim/tmp

set scrolloff=5
" set ttyfast

set ignorecase
set smartcase
set incsearch

set showmatch

nore ; :

" typos:
:command WQ wq
:command Wq wq
:command W w
:command Q q

set nowrap
set t_Co=16

" 4 space tabs
set tabstop=4
set shiftwidth=4
set softtabstop=4
